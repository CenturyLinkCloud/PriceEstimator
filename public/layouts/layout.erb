                        <div class="header-phone" style="">1.877.388.4373</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
<section class="page-title estimator">
    <div class="container">
        <div class="row">
            <div class="span12">
                <h1>Pay only for what you use</h1>
                <p class="lead">Estimate your monthly bill using our cost estimator</p>
            </div>
        </div>
    </div>
</section>


<section class="page-form">

    <section class="green-section" id="monthly-total">
        <div class="container">
        <h3>Estimated Monthly Total</h3>
        <div class="total-box">
            <span class="price">$0.00</span>
            <span class="estimated">estimated / month</span>

            <div class="buttons pull-right">
            	<a href="/contact/" class="btn btn-discuss">contact</a>
                <!-- <span id="lpButDivID-1393532216480" class="btn btn-discuss"></span>
